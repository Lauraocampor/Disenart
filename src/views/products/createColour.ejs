<!-- HTML -->
<!doctype html>
<html lang="es">
	<%- include("../partials/head") %>
	<body class="bodyXL">
		<!-- HEADER -->
		<%- include('../partials/header') %>
		<!-- MAIN -->
		<main class="main-createProduct">
			<div class="colour-size-list">
				<% colours.forEach(colour => { %>
				<ul>
					<li><%= colour.colour %></li>
				</ul>
				<% }) %>
			</div>
			<br />
			<form class="createProduct" action="/products/colours" method="post">
				<label class="createProduct-name">Nuevo Color</label>
				<input
					class="createProduct-name"
					type="text"
					id="productColor"
					name="productColor"
					required
				/>

				<input id="createProduct-finish" type="submit" value="Crear color" />
			</form>
		</main>
		<!-- FOOTER -->
		<%- include("../partials/footer"); %>
		<!-- SCRIPT -->
		<script src="/js/main.js"></script>
		<script src="/js/header.js"></script>
	</body>
</html>
