<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
  <body class="bodyXL">
    <!-- HEADER -->
    <%- include('../partials/header') %>
    <!-- MAIN -->
    <% if (searchResults.length === 0) { %>
    <main class="itemBox">
      <p class="itemBox--searchError">Lo sentimos, no encontramos información relacionada a tu búsqueda</p>
    </main>
    <% } else { %>
    <main class="itemBox">
      <% for( let i = 0; i < searchResults.length; i++ ) { %>
      <article class="itemBox--product">
        <h2><%= searchResults[i].productName %></h2>
        <a
          href="http://localhost:3000/products/<%= searchResults[i].id %>/details"
          class="itemBox--anchor"
        >
          <img
            src="/../images/productos/<%= searchResults[i].productImages[0] %>"
            alt="<%= searchResults[i].productName %>"
            class="itemBox--image"
          />
        </a>
        <p><%= searchResults[i].productPrice %></p>
      </article>
      <% } %>
    </main>
    <% } %>
    <!-- FOOTER -->
    <%- include("../partials/footer"); %>
    <!-- SCRIPT -->
    <script src="/../js/main.js"></script>
    <script src="/../js/header.js"></script>
  </body>
</html>
