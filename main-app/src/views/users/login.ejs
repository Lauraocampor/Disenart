<!-- HTML -->
<!DOCTYPE html>
<html lang="es" style="overflow-x: hidden;">
<!-- HEAD -->
<%- include("../partials/head") %>
<!-- BODY -->

<body class="bodyXL">
  <!-- HEADER -->
  <%- include('../partials/header') %>
  <!-- MAIN -->
  <main class="mainPadding">
    <section class="home-wrap">
      <div class="form">
        <div class="modal-content" id="register-login-ejs__transformXY">
          <h2 class="modal-form__titulo">Bienvenido</h2>
          <!-- FORM -->
          <form id="loginModalForm" class="modal-form" action="/users/login" method="POST">
            <!-- EMAIL -->
            <label for="email">Correo electrónico</label>
            <input id="emailInput" class="input" type="email" name="email">
            <!-- WRONG DATA BACKEND VALIDATION MESSAGE -->
            <% if (locals.errors && errors.email ) { %>
            <div class="text-danger">
              <%=errors.email.msg%>
            </div>
            <% } %>
            <!-- FRONT END EMAIL VALIDATION MESSAGE -->
            <div id="textDangerVal" class="text-danger">
            </div>
            <!-- PASSWORD -->
            <label for="password">Contraseña</label>
            <input id="passInput" class="input" type="password" name="password">
            <!-- PASSWORD VALIDATION FRONT END -->
            <div id="textDangerPass" class="text-danger">
            </div>
            <!-- REMEMBER ME -->
            <div class="checkbox-password">
              <input type="checkbox" name="remember_password">
              <label for="remember_password">Recordarme</label>
            </div>
            <!-- RECOVER -->
            <p><a href="#">¿Olvidaste tu contraseña?</a></p>
            <!-- SUBMIT -->
            <button id="formButtonSub" class="modal-submit" type="submit">Iniciar sesión</button>
            <!-- REGISTER REDIRECT -->
            <div class="modal-bottom">
              <p>¿Necesitas una cuenta?</p> <a href="register">Registrarse</a>
            </div>
          </form>
          <!-- FORM -->
        </div>
      </div>
    </section>
  </main>
  <!-- FOOTER -->
  <%- include("../partials/footer"); %>
  <!-- SCRIPT -->
  <script src="/../js/header.js"></script>
  <script src="/../js/login.js"></script>
</body>

</html>